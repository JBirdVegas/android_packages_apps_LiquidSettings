<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ScrollView
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/title_haptic_notice"/>

  <TextView android:id="@+id/type_desc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_marginTop="10px">
  </TextView>

  <TextView android:id="@+id/TextView04"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="@string/haptic_plus_minus_desc"
    android:editable="false"
    android:layout_width="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginTop="10px">
  </TextView>

  <RelativeLayout android:id="@+id/RelativeLayout01"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_width="match_parent">

    <Button android:layout_height="wrap_content"
      android:text="@string/haptic_button_plus"
      android:textSize="30px"
      android:textStyle="bold"
      android:layout_width="60px"
      android:layout_alignParentLeft="true"
      android:id="@+id/add_button">
    </Button>

    <Button android:layout_height="wrap_content"
      android:text="@string/haptic_button_minus"
      android:textSize="30px"
      android:textStyle="bold"
      android:layout_width="60px"
      android:layout_alignParentRight="true"
      android:id="@+id/sub_button">
    </Button>
  </RelativeLayout>

    <TableLayout android:id="@+id/TableLayout01"
      android:layout_height="wrap_content"
      android:layout_width="match_parent">
    </TableLayout>

  <RelativeLayout android:id="@+id/RelativeLayout02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button android:id="@+id/save_button"
      android:layout_height="wrap_content"
      android:text="@string/haptic_button_save"
      android:clickable="true"
      android:textStyle="bold"
      android:hapticFeedbackEnabled="false"
      android:layout_width="wrap_content"
      android:layout_alignParentLeft="true">
    </Button>

    <view class="com.liquid.settings.activities.HapticAdjust$TestButton" 
      android:id="@+id/test_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/haptic_button_test"
      android:hapticFeedbackEnabled="false"
      android:clickable="true"
      android:textStyle="bold"
      android:minWidth="125px"
      android:layout_centerHorizontal="true"/>

    <Button android:id="@+id/cancel_button"
      android:layout_height="wrap_content"
      android:text="@string/haptic_button_cancel"
      android:clickable="true"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_alignParentRight="true">
    </Button>
  </RelativeLayout>

  <RelativeLayout android:id="@+id/RelativeLayout03"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
      <Button android:text="@string/haptic_button_revert"
          android:id="@+id/revert_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true">
      </Button>
      <Button android:layout_height="wrap_content"
          android:text="@string/haptic_button_default"
          android:id="@+id/default_button"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content">
      </Button>
  </RelativeLayout>
  </LinearLayout>
  </ScrollView>
</LinearLayout>
